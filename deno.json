{
  "tasks": {
    "dev": "deno run --watch main.ts"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1"
  },
  "workspace": ["./dev/localServer", "./POCs"],
  "compilerOptions": {
    "lib": ["deno.ns", "dom"]
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "include": [
        "camelcase",
        "default-param-last",
        "eqeqeq",
        "explicit-function-return-type",
        "explicit-module-boundary-types",
        "guard-for-in",
        "no-await-in-loop",
        "no-boolean-literal-for-arguments",
        "no-eval",
        "no-external-import",
        "no-inferrable-types",
        "no-non-null-asserted-optional-chain",
        "no-self-compare",
        "no-sparse-arrays",
        "no-sync-fn-in-async-fn",
        "no-throw-literal",
        "no-undef",
        "prefer-ascii",
        "prefer-as-const",
        "prefer-const",
        "triple-slash-reference"
      ]
    }
  },
  "fmt": {
    "lineWidth": 110,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "never"
  }
}
